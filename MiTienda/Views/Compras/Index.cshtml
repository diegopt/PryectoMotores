
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutCompras.cshtml";
}
<div style="height: 150px; background-color:white"></div>
<h2>Index de Compras</h2>

@{
    DateTime dia = DateTime.Now;
    var hora = dia.Hour;
    string mensaje = "";
    if (hora < 12)
    {
        mensaje = "Buenos días";
    }
    if ((hora >= 12) && (hora < 19))
    {
        mensaje = "Buenas tardes";
    }
    if (hora >= 19)
    {
        mensaje = "Buenas noches";

    }
    string name = @Session["usr"].ToString();
}
<h2>@mensaje  @name</h2>