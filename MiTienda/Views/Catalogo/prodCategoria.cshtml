@using MiTienda.Models
@{
    ViewBag.Title = "prodCategoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="height: 150px; background-color:white"></div>

<h2 class="text-center" style="color:royalblue">@ViewBag.Catego</h2>

<style> 
    .page-content {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-evenly;
        border: 1px solid black;
    }

    .product-container {
        margin: 15px;
        padding: 2px 16px;
        position: relative;
        box-shadow: 0 4px 8px 0 rgba(0,0,0,0,2);
        background-color: white;
    }

        .product-container:hover {
            box-shadow: 0 8px 16px 0 rgba(0,0,0,0,2);
        }

        .product-container img {
            width: 300px;
        }

        .product-container h2 {
            margin-bottom: 10px;
            margin-left: 15px;
        }

    .button-add {
        font-size: 16px;
        text-align: center;
        border-radius: 8px;
        padding: 10px 20px;
        background-color: white;
        color: royalblue;
        border: 2px solid royalblue;
        transition-duration: 0.4s;
        position: absolute;
        right: 15px;
        bottom: 10px;
    }

    h3 {
        text-align: center;
    }

    img {
        width: 50px;
        height: 200px;
    }
</style>

<div class="page-content">
    @foreach (productos item in ViewBag.productos)
    {
        <div class="product-container">
            <h3>@item.nombre</h3>
            <img src="~/Content/images/motores/@item.imagen" />
            <h2>$@item.precio</h2>
            <button class="button-add">@Html.ActionLink("Agregar al carrito", "Agregar", "Carro", new { id = item.Id_producto }, null)</button>
        </div>
    }
</div>