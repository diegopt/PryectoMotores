@using MiTienda.Models
@{
    ViewBag.Title = "BuscaProd";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/Content/images/estilosTablas.css">
<div style="height: 150px; background-color:white"></div>

<section class="contenedor-tabla">
    <div class="contenido-tabla">
        <h3>Lista de productos con nombre " @ViewBag.SearchKey "</h3>
        <table class="tabla">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Foto</th>
                    <th>Precio</th>
                    <th>Comprar</th>
                </tr>
            </thead>
            <tbody>
                @foreach (productos producto in ViewBag.Listado)
                {
                    <tr>
                        <td>@producto.nombre</td>
                        <td><img src="~/Content/images/motores/@producto.imagen" width="60" /></td>
                        <td>@producto.precio</td>
                        <td>
                            <a href="@Url.Action("Agregar", "Carro", new {id = producto.Id_producto })">Agregar al carrito</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>