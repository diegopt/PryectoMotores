<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <title>@ViewBag.Title - Mi aplicación ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .tnavbar {
            overflow: hidden;
            background-color: royalblue;
            height: 120%;
            display: flex;
            justify-content: center;
        }

        #motor {
            text-align: center;
            font-weight: bold;
            color: white;
            font-size: 500%;
        }

        #buscador {
            margin-top: 3%;
            margin-left: 15%;
            display: flex;
        }

        h2 {
            text-align: center;
        }

        .contenedor {
            text-align: center;
            justify-content: center;
            align-items: center;
            border: 1px solid #aaa;
            padding: 10px;
            width: 300px;
            margin-left: 420px;
        }

        .input-contenedor {
            margin-top: 20px;
        }
    </style>

</head>
<body>

    <div class="navbar navbar-inverse navbar-fixed-top">

        <div class="container-fluid" style="background-color:royalblue">
            <h1 id="motor">Motor - Inc</h1>
            <hr />
            <h3 style="color:white; text-align:center">ADMINISTRADOR</h3>

        </div>

        <div style="height: 10px; background-color:white"></div>

        <div class="container" style="top">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-header">
                    

                </ul>
                <ul class="nav navbar-nav">
                    <li style="font-size:150%; color:white">@Html.ActionLink("Empleados", "Index", "Administrador")</li>
                    <li style="font-size:150%; color:white">@Html.ActionLink("Roles", "Index", "Roles")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>

        </div>
    
    </div>
    <br />
    <br />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Motor-Inc ASP.NET</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>

